---
import { Handshake } from "@lucide/astro";
import StoryCard from "./ui/StoryCard.astro";

const stories = [
    { 
        icon: Handshake,
        title: "Écoutez les Angano", 
        description: "Plongez dans les contes et légendes qui ont bercé des générations." 
    },
    { 
        icon: Handshake,
        title: "Défiez aux Ankamatatra", 
        description: "Stimulez votre esprit avec les devinettes traditionnelles pleines de sagesse." 
    },
    { 
        icon: Handshake,
        title: "Maîtrisez le Kabary", 
        description: "Apprenez l'art du discours, un pilier de notre culture et de la vie en société." 
    },
    {
        icon: Handshake,
        title: "Explorez les Rituels Ancestraux", 
        description: "Découvrez les pratiques qui relient notre communauté à ses racines." 
    },
    { 
        icon: Handshake,
        title: "Participez aux Cérémonies Traditionnelles", 
        description: "Vivez les moments forts de notre culture à travers des événements authentiques." 
    },
    { 
        icon: Handshake,
        title: "Engagez-vous pour la Citoyenneté Responsable", 
        description: "Inspirez-vous des valeurs ancestrales pour devenir un citoyen actif et conscient." 
    }
];

const { title, subtitle } = Astro.props;
---
<section class="py-20 md:py-32 overflow-hidden" aria-labelledby="section-title">
    <div class="container mx-auto px-6">
        <header class="text-center mb-16 md:mb-24">
            <h2 id="section-title" class="font-bold text-4xl md:text-5xl text-brand-dark">
                {title}
            </h2>
            <p class="mt-4 text-xl md:text-2xl text-brand-text/70">
                {subtitle}
            </p>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {stories.map((story) => (
                <StoryCard title={story.title} description={story.description}>
                    <Fragment slot="icon">
                        <story.icon class="h-6 w-6" />
                    </Fragment>
                </StoryCard>
            ))}
        </div>
    </div>
</section>